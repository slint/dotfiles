{
    "[elixir]": {
        "editor.tabSize": 2
    },

    "[php]": {
        "editor.tabSize": 2
    },

    "editor.cursorBlinking": "phase",
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        79
    ],
    "editor.snippetSuggestions": "inline",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 90,
    "editor.minimap.renderCharacters": false,
    "editor.tabCompletion": true,
    "editor.wordWrap": "on",

    "emmet.useNewEmmet": true,

    "files.exclude": {
        "**/*.egg-info": true,
        "**/*.eggs": true,
        "**/*.pid": true,
        "**/*.pyc": true,
        "**/.DS_Store": true,
        "**/.cache": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/__pycache__": true,
        "**/_build": true,
        "**/bower_components": true,
        "**/build": true,
        "**/coverage": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/.vscode/tags": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.unitTest.pyTestEnabled": true,
    "python.venvPath": "/home/alex/Envs",

    "restructuredtext.builtDocumentationPath": "docs/_build/html",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.fontSize": 11,

    "vsicons.dontShowNewVersionMessage": true,
    "vsicons.projectDetection.disableDetect": true,

    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "Material Night Eighties",
    "workbench.iconTheme": "material-icon-theme",
    "extensions.ignoreRecommendations": false,
    "workbench.startupEditor": "newUntitledFile"
}
