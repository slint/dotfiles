{
    "[elixir]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[vue]": {
        "editor.tabSize": 2
    },
    "[vue-html]": {
        "editor.tabSize": 2
    },
    "[graphql]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },

    "editor.cursorBlinking": "phase",
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        79
    ],
    "editor.snippetSuggestions": "inline",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 90,
    "editor.minimap.renderCharacters": false,
    "editor.tabCompletion": true,
    "editor.wordWrap": "on",

    "extensions.autoUpdate": false,

    "files.exclude": {
        "**/__pycache__": true,
        "**/_build": true,
        "**/.cache": true,
        "**/.DS_Store": true,
        "**/.elixir_ls": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/.vscode/tags": true,
        "**/*.egg-info": true,
        "**/*.eggs": true,
        "**/*.pid": true,
        "**/*.pyc": true,
        "**/*.secret": true,
        "**/bower_components": true,
        "**/build": true,
        "**/coverage": true,
        "**/CVS": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/.vscode": true
    },

    "files.associations": {
        "*.env": "yaml"
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.venvPath": "${env:HOME}/Envs",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.fontSize": 11,

    "vsicons.dontShowNewVersionMessage": true,
    "vsicons.projectDetection.disableDetect": true,

    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}",
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": "material-icon-theme",
    "docker.showExplorer": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],
    "gitlens.hovers.currentLine.over": "line",
    "workbench.startupEditor": "newUntitledFile",
    "gitlens.keymap": "chorded",
    "workbench.colorTheme": "Material Night Eighties",
    "gitlens.historyExplorer.enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "79",
        "--skip-string-normalization"
    ],
    "elastic.showResultAsDocument": false,
    "breadcrumbs.enabled": true,
    "files.defaultLanguage": "python",
    "fileutils.delete.useTrash": true,
    "fileutils.typeahead.enabled": false,
    "cSpell.allowCompoundWords": true,
    "cSpell.diagnosticLevel": "Hint",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "window.titleBarStyle": "native",
    "materialTheme.accent": "Remove accents",
    "workbench.colorCustomizations": {}
}
