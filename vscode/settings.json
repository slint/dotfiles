{
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.rulers": [79],
    // "editor.wrappingColumn": 80,
    "editor.cursorBlinking": "phase",
    "editor.renderIndentGuides": true,

    "editor.renderWhitespace": "boundary",

    "files.trimTrailingWhitespace": true,

    "files.exclude": {
        "**/__pycache__": true,
        "**/_build": true,
        "**/.cache": true,
        "**/*.egg-info": true,
        "**/*.eggs": true,
        "**/*.pid": true,
        "**/build": true,
        "**/coverage": true,
        "**/CVS": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/*.pyc": true
    },


    // TODO: Check if we may need something special here for guake/tmux...
    // "terminal.external.linuxExec": "x-terminal-emulator"

    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 11,

    "python.linting.flake8Enabled": true,
    "python.unitTest.pyTestEnabled": true,

    // Path to folder with a list of Virtual Environments (e.g. ~/.pyenv, ~/Envs, ~/.virtualenvs).
    "python.venvPath": "/home/alex/Envs",

    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",

    "window.zoomLevel": 0,
    "vsicons.projectDetection.disableDetect": true,
    "vsicons.dontShowNewVersionMessage": true,
    "cSpell.userWords": [
        "bulma",
        "Ioannidis",
        "cern",
        "LYBC",
        "Backend",
        "Datasync",
        "progressbar",
        "Invenio"
    ],
    "cSpell.enabledLanguageIds": [
        "c",
        "cpp",
        "csharp",
        "go",
        "javascript",
        "javascriptreact",
        "json",
        "latex",
        "markdown",
        "php",
        "plaintext",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],

    // HTML page output folder relative to workspace root.
    "restructuredtext.builtDocumentationPath": "docs/_build/html",

    // The folder that contains makefile and make.bat relative to workspace root.
    "restructuredtext.makefilePath": "docs/.",

    "editor.wordWrap": true,
    "workbench.colorTheme": "Material",
    "workbench.iconTheme": "material-icon-theme"
}