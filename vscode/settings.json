{
    "[elixir]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[vue]": {
        "editor.tabSize": 2
    },
    "[vue-html]": {
        "editor.tabSize": 2
    },
    "[graphql]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },

    "editor.cursorBlinking": "phase",
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 10,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        79
    ],
    "editor.snippetSuggestions": "inline",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 90,
    "editor.minimap.renderCharacters": false,
    "editor.tabCompletion": true,
    "editor.wordWrap": "on",

    "extensions.autoUpdate": false,

    "files.exclude": {
        "**/*.egg-info": true,
        "**/*.eggs": true,
        "**/*.pid": true,
        "**/*.pyc": true,
        "**/.DS_Store": true,
        "**/.cache": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/__pycache__": true,
        "**/_build": true,
        "**/bower_components": true,
        "**/build": true,
        "**/coverage": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/.vscode/tags": true,
        "**/.elixir_ls": true,
        "**/*.secret": true
    },
    "search.exclude": {
        "**/.vscode": true
    },

    "files.associations": {
        "*.env": "yaml"
    },
    "files.defaultLanguage": "python",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.venvPath": "/home/alex/Envs",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.fontSize": 11,

    "vsicons.dontShowNewVersionMessage": true,
    "vsicons.projectDetection.disableDetect": true,

    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "workbench.iconTheme": "material-icon-theme",
    "vim.leader": ",",
    "vim.useCtrlKeys": false,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before":["<leader>", "<space>"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        }
    ],
    "docker.showExplorer": false,
    "python.disablePromptForFeatures": [
        "flake8"
    ],
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],
    "gitlens.hovers.currentLine.over": "line",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Material Night Eighties",
    "gitlens.keymap": "alternate",
}
