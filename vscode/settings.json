{
    "[elixir]": {
        "editor.tabSize": 2
    },

    "cSpell.enabledLanguageIds": [
        "c",
        "cpp",
        "csharp",
        "go",
        "javascript",
        "javascriptreact",
        "json",
        "latex",
        "markdown",
        "php",
        "plaintext",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],

    "editor.cursorBlinking": "phase",
    "editor.fontFamily": "'Hack', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        79
    ],
    "editor.snippetSuggestions": "inline",
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 90,
    "editor.minimap.renderCharacters": false,
    "editor.tabCompletion": true,
    "editor.wordWrap": true,

    "files.exclude": {
        "**/*.egg-info": true,
        "**/*.eggs": true,
        "**/*.pid": true,
        "**/*.pyc": true,
        "**/.DS_Store": true,
        "**/.cache": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/CVS": true,
        "**/__pycache__": true,
        "**/_build": true,
        "**/bower_components": true,
        "**/build": true,
        "**/coverage": true,
        "**/dist": true,
        "**/node_modules": true
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,


    "python.jediPath": "jedi",
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.unitTest.pyTestEnabled": true,
    "python.venvPath": "/home/alex/Envs",

    "restructuredtext.builtDocumentationPath": "docs/_build/html",
    "restructuredtext.makefilePath": "docs/.",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Hack",
    "terminal.integrated.fontSize": 11,

    "vsicons.dontShowNewVersionMessage": true,
    "vsicons.projectDetection.disableDetect": true,

    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "window.zoomLevel": 0,

    "workbench.colorTheme": "Material",
    "workbench.iconTheme": "material-icon-theme"
}
